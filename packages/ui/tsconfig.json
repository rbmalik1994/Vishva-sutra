{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "composite": true,
    "jsx": "react-jsx",
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
